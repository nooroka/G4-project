rule cat:
     input:
        x1 = expand("../mutdensgene_40_v3/mutdensgene_quadr40_2_{number}_all_loop7_control1_v3-3_plus.txt", number = SAMPLES),
        x2 = expand("../mutdensgene_40_v3/mutdensgene_non_quadr40_2_{number}_all_loop7_control1_v3-3_plus.txt",number = SAMPLES)
     output:
        y1 = "../mutdensgene_40_v3/final/mutdensgene_quadr40_2-from_all_loop7_control1_v3-3_plus.txt",
        y2 = "../mutdensgene_40_v3/final/mutdensgene_non_quadr40_2-from_all_loop7_control1_v3-3_plus.txt"
     shell:
        """
        cat {input.x1} > {output.y1}
        cat {input.x2} > {output.y2}
        """

rule density:
      input:
        x1 = "../mutdensgene_40_v3/final/mutdensgene_quadr40_2-from_all_loop7_control1_v3-3_plus.txt",
        x2 = "../mutdensgene_40_v3/final/mutdensgene_non_quadr40_2-from_all_loop7_control1_v3-3_plus.txt"
      output:
        y1 = "../mutdensgene_40_v3/final/out_control1_40_quadr_plus.csv",
        y2 = "../mutdensgene_40_v3/final/out_control1_40_non-quadr_plus.csv"
      shell:
      	"""
      	python ../scripts/density_per_ch.py {input.x1} {output.y1}
      	python ../scripts/density_per_ch.py {input.x2} {output.y2}
      	"""	
